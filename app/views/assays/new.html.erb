<div class="contribution_title">
  <h1><%=  @assay.is_modelling? ? "Modelling analysis creation" : "Assay creation" -%></h1>
</div>

<% unless @assay.assay_class %>
  <div class="assay_selection">

    <span>Please select the class of assay you wish to create</span>
    <br/><br/><br/>
    <%= link_to "<p class='select_assay_class'>#{image("assay_experimental_avatar",:size=>"32x32")}An experimental assay</p>",new_assay_path(:class=>:experimental,:study_id=>params[:study_id]) %>

    <%= link_to "<p class='select_assay_class'>#{image("assay_modelling_avatar",:size=>"32x32")}A modelling analysis</p>",new_assay_path(:class=>:modelling,:study_id=>params[:study_id]) %>

  </div>
<% else %>  
  <div class="show_basic">
    <% form_for @assay do |f| %>
      <%= render :partial => "form", :locals => { :f => f, :action=>:new } -%>
    <% end -%>
  </div>
<% end -%>
