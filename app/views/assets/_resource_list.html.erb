<% odd_row = false -%>
<% narrow_view ||= false -%>

<% unless collection.empty? -%>
  <div class="list_items_container">
  	<% collection.each do |item| -%>
		  <% if Authorization.is_authorized?("show", nil, item, current_user) -%>
			  <% odd_row = !odd_row -%>
				<%= render :partial => "#{item.class.name.pluralize.downcase}/table", :locals => { :resource => item, :odd_row => odd_row, :narrow_view => narrow_view } -%>
			<% end -%>
		<% end -%>
	</div>
<% end -%>

