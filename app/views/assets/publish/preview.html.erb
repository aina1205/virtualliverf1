<div class="show_basic">

  <h1>Publishing the <%= asset_type_name -%> '<%= @asset.title -%>' and related items. </h1>

  <p class="box_standout">
    Some text about what publishing is and what you need to do.
  </p>

  <% form_tag :action=>:publish do -%>

      <ul class="publish_assays">
        <% if @asset.assays.empty? -%>
            <span class="none_text">There are no Assays related to this <%= asset_type_name -%>.</span>
        <% else -%>

            <% @asset.assays.each do |assay| -%>

                <%= render :partial=>"assets/publish/options_for", :object=>assay, :locals=>{:html_classes=>"publish_assay"} -%>

                <%= render :partial=>"assets/publish/options_for", :object=>assay.study, :locals=>{:html_classes=>"publish_study"} -%>

                <%= render :partial=>"assets/publish/options_for", :object=>assay.study.investigation, :locals=>{:html_classes=>"publish_investigation"} -%>

                <%= render :partial=>"assets/publish/options_for", :collection=>(assay.asset_masters - [@asset]), :locals=>{:html_classes=>"publish_assay_assets"} -%>

            <% end -%>

        <% end -%>

      </ul>

      <%= submit_tag "Submit",:disable_with=>"Submitting ..." -%>

  <% end -%>

</div>




