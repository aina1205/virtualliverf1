<% unless resource.nil? -%>
  <div title='<%= tooltip_title_attrib(h(resource.description), 1000) %>'>
    <p class="title">
      <%= h resource.title -%>
    </p>
    
    <%= list_item_attribute "Version", resource.version -%>
    
    <%= list_item_optional_attribute "Project", resource.project.try(:title), resource.project -%>
    
    <%= list_item_contributor resource -%>
    
    <%= list_item_simple_list resource.asset.creators, "Creator" -%>
    
    <%= list_item_description resource.description -%>  
  </div>
<% end -%>
