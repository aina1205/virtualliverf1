<%= image_tag_for_key "show", show_resource_path(resource), nil, nil, "View" -%>
<% if resource.can_download?-%>
  <%= image_tag_for_key "download", download_resource_path(resource) -%>
<% end -%>
<% if resource.can_manage? -%>
  <%= image_tag_for_key "manage", edit_resource_path(resource), nil, nil, "Manage" -%>
<% elsif resource.can_edit? -%>
  <%= image_tag_for_key "edit", edit_resource_path(resource), nil, nil, "Edit" -%>
<% end -%>
<% if resource.respond_to? :convert_to_presentation %>
     <%= image_tag_for_key "arrow_right", {:action => :convert_to_presentation,:id=>resource.id}, nil, {:title => "click it to move this data file to presentations",:confirm => "Are you sure? This action is irreversible!"}, 'Move'%>
<% end %>
