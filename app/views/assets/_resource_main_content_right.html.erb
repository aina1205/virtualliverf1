<% truncate_length_for_boxes = 22 -%>

<div class="main_content_right_box_wider">
  <% if resource.respond_to? :version -%>
    <%= render :partial=>"assets/resource_version_details", :locals=>{:displayed_resource=>displayed_resource, :resource=>resource} -%>
  <% end %>

  <%= render :partial => "assets/resource_authors_box", :locals => { :resource => resource, :truncate_to => truncate_length_for_boxes } if resource.respond_to?("creators") -%>

  <% if resource.class.is_taggable? -%>
    <%= item_tags_and_tag_entry -%>
  <% end -%>

  <% if resource.respond_to? :attributions_objects -%>
    <%= render :partial => "assets/resource_attributions_box",
               :locals => { :resource => resource, :attributed_to => resource.attributions_objects,
               :truncate_to => truncate_length_for_boxes } -%>
  <% end -%>

</div>
