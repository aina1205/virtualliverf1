<div class="contribution_section_box" style="padding: 0.5em 0 1em 0;">

  <p class="heading">
    <%= help_icon("The original uploader is the person who uploaded, or registered automatically via the JERM") -%>
    Uploaded by
  </p>
  <% if resource.contributor -%>
    <p>
      <% resource_contributor = resource.contributor.person -%>
      <%= favouritable_icon(resource_contributor, 80) -%><br/>
      <%= link_to(h(resource_contributor.name), resource_contributor) -%>
    </p>
  <% else -%>
    <p>
      <%= the_jerm %>
    </p>
  <% end %>

</div>
