<% if resource.contributor -%>
  <div class="contribution_section_box" style="padding: 0.5em 0 1em 0;">
    <p class="heading">
      <%= help_icon("The original uploader is the person who uploaded/created this #{resource.class.name} and who manages it.") -%>
                  Uploaded by
    </p>
    <p>
      <% resource_contributor = resource.asset.contributor.person -%>
      <%= favouritable_icon(resource_contributor, 80) -%>
      <%= link_to(h(resource_contributor.name), resource_contributor) -%>
    </p>
  </div>
<% end %>