<h1>Listing profiles</h1>

<table>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Skype name</th>
    <th>Web page</th>
    <th>Person</th>
  </tr>

<% for profile in @profiles %>
  <tr>
    <td><%=h profile.first_name %></td>
    <td><%=h profile.last_name %></td>
    <td><%=h profile.email %></td>
    <td><%=h profile.phone %></td>
    <td><%=h profile.skype_name %></td>
    <td><%=h profile.web_page %></td>
    <td><%=h profile.person_id %></td>
    <td><%= link_to 'Show', profile %></td>
    <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
    <td><%= link_to 'Destroy', profile, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

