<% if logged_in? -%>
    <%= render :partial => "gadgets/new_object_gadget" -%>
    <%= render :partial => "gadgets/who_am_i" -%>
    <%= render :partial=>"gadgets/favourites" -%>
<% else -%>
    <%= render :partial => "gadgets/sign_in" -%>
<% end -%>

<% cache "tag_clouds" do -%>
    <%= render :partial=>"gadgets/tag_cloud_gadget", :object=>Person.expertise_counts, :locals=>{:type=>"expertise", :title=>"Expertise"} %>
    <%= render :partial=>"gadgets/tag_cloud_gadget", :object=>Person.tool_counts, :locals=>{:type=>"tools", :title=>"Tools and Techniques"} %>
<% end -%>

