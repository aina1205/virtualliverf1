<div class="alphabetcal_pagination">
  <ul>
    <% for page in pages -%>
        <% current_page_class = page==current_page ? "current_page" : "" -%>
        <% if page_totals[page]>0 -%>
            <li class="<%= current_page_class %>">
              <%= link_to h(page), :id => params[:id], :page => page %>
            </li>
        <% else -%>
            <li class="disabled_page <%= current_page_class %>">
              <%= h(page) %>
            </li>
        <% end -%>
    <% end -%>
    <li class="<%= current_page == "all" ? "current_page" : "" %>">
      <%= link_to "Show All ", :id => params[:id], :page => "all" %>
    </li>
  </ul>
</div>