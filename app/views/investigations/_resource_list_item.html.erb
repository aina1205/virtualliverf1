<% investigation = resource_list_item %>

<table class="list_item">
  <tr>
    <td style="width: 100px;">
      <%= favouritable_icon(investigation, 60) -%>
    </td>
    <td class="item_details">
      <p class="title">
        <%= link_to h(investigation.title),investigation %>
      </p>

      <div class="box_standout">
        <%= text_or_not_specified(investigation.description, :description => true,:auto_link=>true,:length=>300) %>
      </div>        
      <p class="project">
        <label>Project:</label>
        <%= projects_link_list [investigation.project] %>
      </p>
      <p class="studies">
        <label>Studies: </label>
        <%= studies_link_list investigation.studies %>
      </p>      
      
      <p style="font-size: 85%; margin-top: 0.3em;">
        <b>Created:</b> <%= investigation.created_at.strftime('%d/%m/%Y @ %H:%M:%S') -%>
        <% unless investigation.created_at == investigation.updated_at -%>          
          <b>Last updated:</b> <%= investigation.updated_at.strftime('%d/%m/%Y @ %H:%M:%S') -%>
        <% end %>
      </p>
    </td>

  </tr>
</table>