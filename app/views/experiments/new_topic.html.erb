<div id="redbox_contents_div" class="redbox_contents" style="width:500px;">
  <div class="head">
    <%= link_to_close_redbox image_tag("close.gif"), :style => "float:right; margin-left:0.5em; vertical-align:middle;" -%>
  </div>
  <center>
    <div class="body">
      <h2>New Topic</h2>

      Project: <%= @topic.project.name %><br/>
      <% form_for @topic,:url=>{:action=>"create_topic"} do |f| -%>
        <%= f.label :title %><br/>
        <%= f.text_field :title %><br/>
        <%= f.label :description %><br/>
        <%= f.text_area :description %><br/>
        <%= f.submit "Create" %>
      <% end -%>
    </div>
  </center>



</div>