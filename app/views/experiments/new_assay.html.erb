<div id="redbox_contents_div" class="redbox_contents" style="width:400px;">
  <div class="head">
    <%= link_to_close_redbox image_tag("close.gif"), :style => "float:right; margin-left:0.5em; vertical-align:middle;" -%>
    <span style="vertical-align:middle;">
      New Assay
    </span>
  </div>
  <center>
    <div class="body">

      Topic: <%= @assay.topic.title %><br/>

      <%= hidden_field_tag :topic_id,@assay.topic.id %>

      <%= label_tag :title %><br/>
      <%= text_field_tag :title %><br/>

      <%= submit_tag "Create",:onclick=>"postAssayData();return(false);" %>
      <input type="button" value="Cancel" style="width: 150px;" onclick="javascript: RedBox.close(); return(false);" />

    </div>
  </center>
  
</div>