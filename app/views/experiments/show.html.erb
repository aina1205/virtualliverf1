<% truncate_length_for_boxes = 22 -%>

<ul class="sectionIcons">
  <li><%= image_tag_for_key('edit', edit_experiment_path(@experiment), "Edit experiment Details", nil, 'Edit experiment Details') %></li>
  <li><%= image_tag_for_key "destroy", experiment_path(@experiment), "Delete experiment", {:confirm => 'Are you sure?', :method => :delete}, "Delete experiment" -%></li>
</ul>

<%= render :partial => "layouts/item_title", :locals=>{:item=>@experiment} %>

<div class="show_basic">

  <div class="main_content_left_box">

    <div class="box_about_actor">

      <p>
        <label>Sample:</label>
        <%= text_or_not_specified(@experiment.sample.title) %>
      </p>

      <p>
        <label>Date of experiment:</label>
        <% if @experiment.date.nil? %>
            <%= text_or_not_specified nil %>
        <% else %>

            <% if @experiment.date.hour == 0 and @experiment.date.min == 0 and @experiment.date.sec == 0 then %>
                <%= h @experiment.date.strftime('%d/%m/%Y') %>
            <% else %>
                <%= h @experiment.date.strftime('%d/%m/%Y @ %H:%M:%S') %>
            <% end %>

        <% end %>
      </p>

    </div>
  </div>
  <!--  <div class="main_content_right_box">
    <#%= render :partial => "layouts/contribution_section_box_avatar", :locals => { :object => @project, :drag_id => drag_id } -%>
  </div>-->
  <div style="clear:both;">
    <p style="margin-top: 1em;">
      <b>About the experiment:</b>

    <div id="description" class="box_standout">
      <%= text_or_not_specified(@experiment.description, :description=>true, :auto_link=>true) %>
    </div>
    </p>

  </div>


  <div style="clear:both">

        <%= render :partial=>"layouts/items_related_to",:object => @experiment %>
    </div>

</div>