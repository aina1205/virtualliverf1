
<% form_tag :action=>"update_features_enabled" do -%>
  <br style="clear:both;"/>
  <br/>
  <div style="width:100%;text-align:left;padding-right:4em;position:absolute;left:100px">
    Events enabled:    <%= check_box_tag(:events_enabled, 1,Seek::Config.events_enabled) %>
    <br style="clear:both;"/>
    <br/>
    Jerm enabled:    <%= check_box_tag(:jerm_enabled, 1, Seek::Config.jerm_enabled) %>
    <br style="clear:both;"/>
    <br/>
    Search enabled:    <%= check_box_tag(:solr_enabled, 1, Seek::Config.solr_enabled, :title => 'enable search function') %>
    <br style="clear:both;"/>
    <br/>
    Exception notification enabled: <%= check_box_tag(:exception_notification_enabled, 1, Seek::Config.exception_notification_enabled) %>
    <br style="clear:both;"/>
    <br/>
    Exception notification recipients:    <%= text_field_tag(:exception_notification_recipients, Seek::Config.exception_notification_recipients) %>
    <br style="clear:both;"/>
    <br/>
    Hide contact details:    <%= check_box_tag(:hide_details_enabled, 1, Seek::Config.hide_details_enabled) %>
    <br style="clear:both;"/>
    <br/>
    Activation for new account: <%= check_box_tag(:activation_required_enabled, 1, Seek::Config.activation_required_enabled, :title => 'when the user register for an account, an email sent to ask for activating the account') %>
    <br style="clear:both;"/>
    <br/>
    Jws:    <%= check_box_tag(:jws_enabled, 1, Seek::Config.jws_enabled, :title => 'enable JWS Online for building and simulating SBML models') %>
    <br style="clear:both;"/>
    <br/>
    Jws online root:    <%= text_field_tag(:jws_online_root, Seek::Config.jws_online_root) %>
    <br style="clear:both;"/>
    <br/>
    Google analytics:    <%= check_box_tag(:google_analytics_enabled, 1, Seek::Config.google_analytics_enabled, :title => 'generating detailed statistics about the visitors to this website') %>
    <br style="clear:both;"/>
    <br/>
    Google analytics tracker id:    <%= text_field_tag(:google_analytics_tracker_id, Seek::Config.google_analytics_tracker_id) %>
    <br style="clear:both;"/>
    <br/>
    <%= render :partial => 'layouts/collapsable_div', :locals => {:title => "Email", :partial => 'admin/email', :div_options => { :class => 'email_configuration'}, :start_open => true} %>
    <br style="clear:both;"/>
    <br/>
    <%= submit_tag "Update" %>
  </div>
<% end -%>

