<h1>Enable or disable features</h1>
<div class="show_basic" style="padding-left:2em;">
<% form_tag :action=>"update_features_enabled" do -%>
  <p>
    Event asset types enabled:    <%= check_box_tag(:events_enabled, 1,Seek::Config.events_enabled) %>
  </p>
  <p>
    JERM enabled:    <%= check_box_tag(:jerm_enabled, 1, Seek::Config.jerm_enabled) %>
  </p>
  <p>
    Search enabled:    <%= check_box_tag(:solr_enabled, 1, Seek::Config.solr_enabled, :title => 'enable search function') %>
  </p>

  <p>
    Hide contact details:    <%= check_box_tag(:hide_details_enabled, 1, Seek::Config.hide_details_enabled) %>
  </p>
  <p>
    Activation required for new accounts: <%= check_box_tag(:activation_required_enabled, 1, Seek::Config.activation_required_enabled, :title => 'when the user register for an account, an email sent to ask for activating the account') %>
  </p>
  <p>
    JWS Online integration enabled:    <%= check_box_tag(:jws_enabled, 1, Seek::Config.jws_enabled, :title => 'enable JWS Online for building and simulating SBML models') %>

    <br/>
    JWS Online Root URL:    <%= text_field_tag(:jws_online_root, Seek::Config.jws_online_root) %>
  </p>
  <p>
    Google analytics enabled: <%= check_box_tag(:google_analytics_enabled, 1, Seek::Config.google_analytics_enabled, :title => 'generating detailed statistics about the visitors to this website') %>

    <br/>
    Google analytics tracker id:    <%= text_field_tag(:google_analytics_tracker_id, Seek::Config.google_analytics_tracker_id) %>
  </p>
  <h3>Email</h3>
  <p>
    <%= render :partial => 'admin/email'  %>
  </p>
  <p>
    Exception notification enabled: <%= check_box_tag(:exception_notification_enabled, 1, Seek::Config.exception_notification_enabled) %>
    <br/>
    Exception notification recipients:    <%= text_field_tag(:exception_notification_recipients, Seek::Config.exception_notification_recipients) %>
  </p>
    <%= submit_tag "Update" %>
  </div>
<% end -%>

