<h1> Administration <span style="font-size:smaller;"><%= "(v.#{APP_VERSION.to_s})" -%></span></h1>



<div style="padding-left:2em;">

  <p>
    <%= link_to "Activity graphs (experimental)", url_for(:action=>"graphs", :controller=>"admin") %>
  </p>

  <p>
    <%= link_to "Manage tags", url_for(:action=>"tags", :controller=>"admin") %>
  </p>

  <h2>Create things ...</h2>

  <p>
    <%= link_to "Create an Institution", new_institution_path %>
    <br/>
    <%= link_to "Create a Project", new_project_path %>
    <br/>
    <%= link_to "Create a Profile", new_person_path %>
  </p>
</div>

<div style="padding-left:2em;">

  <%= render :partial=>"users_details", :locals=>{:people=>Person.pals, :title=>"Official Sysmo PALS" } -%>

