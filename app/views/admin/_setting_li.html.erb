<% description ||= nil -%>
<li>
      <span class='setting_name'>
        <%= name -%>
      </span>
      <span class='<%= field.include?("checkbox") ? "setting_checkbox" : "setting_field" -%>' >
        <%= field -%>
      </span>
      <% if description -%>
          <span class='setting_description'>
            <%= description -%>
          </span>
      <% end -%>
</li>