<% name_class=dubious_tag?(tag) ? "dubious_tag" : ""
   name_class="unlinked_tag" if name_class.empty? and tag.taggings.select{|t| !t.taggable.nil?}.size==0
   associated_count=tag.taggings.select{|t| !t.taggable.nil?}.size

-%>
<% contexts=tag.taggings.collect{|t| t.context}.uniq -%>      
<tr>
  <td><%= tag.id -%></td>
  <td class="<%= name_class -%>"><%= h(tag.name) -%></td>
  <td><%= associated_count -%></td>
  <td><%= contexts.join(", ") -%></td>
  <td>

    <%= link_to image("edit",:title=>"Edit"),:action=>:edit_tag,:id=>tag.id unless associated_count==0 %>
    <%= link_to image("destroy",:title=>"Delete"),{:action=>:delete_tag,:id=>tag.id},:confirm=>"Are you sure?",:method=>:post -%>

  </td>
</tr>