<% person=person_list_item %>
<% profile = person.profile %>

<div id="list_item">
  
  <div id="avatar_pane">
    <div id="avatar">
      <%= image_tag person_avatar_image(person),{:size=>"50x60"} %>
    </div>
  </div>
  
  
  <div id="details">
    
    <div id="name">
      <%=  link_to  h(person_full_name(person)),url_for(person) %>
      <% if @current_user.person==person %>
        <small style="font-size:12px">[<%= link_to "edit",url_for(:id=>@current_user.person,:action=>'edit') %>]</small>
      <% end %>
    </div>
    
    
    <div id="email">
      <% unless profile.email.nil? or profile.email.empty? %>
                          
        <label>Email: </label>
        <%= mail_to h(profile.email) %>
      
      <% end  %>
    </div>
    
    <% unless profile.web_page.nil? or profile.web_page.empty? %>
      <div id="web_page">
        <label>Web page:</label>
        <%= link_to h(profile.web_page), h(profile.web_page),:popup=>true %>
      </div>
    <% end  %>
    
    <% unless profile.phone.nil? or profile.phone.empty? %>
      <div id="phone">
        <label>Phone:</label>
        <%= h profile.phone %>
      </div>
    <% end  %>
    
    <% unless profile.skype_name.nil? or profile.skype_name.empty? -%>
      <div id="skype_name">
        <label>Skype:</label>
        <%= h profile.skype_name %>
      </div>
    <% end  %>
    
    <%= render :partial=>"people/person_list_item_extra_details", :object=>person %>
  </div>
  
</div>