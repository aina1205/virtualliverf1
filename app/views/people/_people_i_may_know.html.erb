<div id="people_i_may_know">
   <% unless is_nil_or_empty? people_i_may_know %>
    <ul><label>People you may know:</label><%= help_icon("These are people that are related to you either by project or institution.") %>
      <% for person in people_i_may_know %>
        <li>
          <%= link_to h(person.name),url_for(person) %>
        </li>
      <% end  %>
    </ul>
  <% end  %>
</div>
