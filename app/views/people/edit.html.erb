<h1>Edit profile: <%= link_to(h(@person.name), person_path(@person)) -%></h1>

<div class="show_basic">
  <% form_for @person do |f| %>
    <div class="yui-g">
      <div class="yui-u first">
        <div id="edit_person_left">
        
          <%= f.error_messages %>
                                                                
          <p>
            <%= f.label :first_name %><br />
            <%= f.text_field :first_name, :style => "width: 90%;" %>
          </p>
          <p>
            <%= f.label :last_name %><br />
            <%= f.text_field :last_name, :style => "width: 90%;" %>
          </p>
          <p>
            <%= f.label :email %><br />
            <%= f.text_field :email, :style => "width: 90%;" %>
          </p>
          <p>
            <%= f.label :phone %><br />
            <%= f.text_field :phone, :style => "width: 90%;" %>
          </p>
          <p>
            <%= f.label :skype_name %><br />
            <%= f.text_field :skype_name, :style => "width: 90%;" %>
          </p>
          <p>
            <%= f.label :web_page %><br />
            <%= f.text_field :web_page, :style => "width: 90%;" %>
          </p>
          <p>
            <%= render :partial => "expertise_text_field", :locals=>{:person=>@person} %>
          </p>
          <p>
            <%= f.label "Description" %>
            <%= f.text_area :description, :class=>"description", :style => "width: 90%;" %>
          </p>
        
          <p style="text-align: center;">
            <%= f.submit "Update", :class=>'submit' %> or <%= link_to("Cancel", person_path(@person)) -%>
          </p>
        </div>
      </div>
      <div class="yui-u">
        <div id="edit_person_right">
        
        
          <%= render :partial =>"work_groups", :locals=>{:person=>@person}%>
        
          <% if @current_user.person == @person %>
        
            <%= link_to "Change login details", url_for({:controller=>:users, :action=>:edit, :id=>@person.user}) %>
        
            <% end %>                        
          </div>
        </div>
      </div>
  
    <% end %>
  </div>
