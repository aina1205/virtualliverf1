                 <%= image_tag "slider/vitruvian_man.png",{:alt=>"vitruvian_man.png",:id=>"bild-0"}%>
                 <%= image_tag "slider/liver2.bmp" ,{:alt=>"liver2.bmp",:id=>"bild-1"}%>
                 <%= image_tag "slider/lebertem.jpg" ,{:alt=>"liver1.bmp",:id=>"bild-2"}%>
                 <%= image_tag "slider/Lobule.jpg" ,:alt=>"liver1.bmp",:id=>"bild-3"%>
                 <%= image_tag "slider/70109-004-41D7A01E.jpg" ,:alt=>"liver1.bmp",:id=>"bild-4"%>
                 <%= image_tag "slider/Hepatocyte.gif" ,:alt=>"liver-illustration.png",:id=>"bild-5"%>
			</div>



			<div id="options">
				<div id="plus">+</div>
				<ul id="scale_list" class="step">

					<li id="cell">cell-</li>
					<li id="intercellular" >intercellular -</li>
					<li id="liverLobule">liver lobule -</li>
					<li id="liverLobe">liver lobe -</li>
					<li id="liver">liver -</li>
					<li id="organism" >organism -</li>

				</ul>
				<div id="slider"></div>

				<div id="minus">-</div>
			</div>

 </div>

<script type="text/javascript">
    var scales_list,children,index;

    scales_list = document.getElementById("scale_list");
    children= scales_list.getElementsByTagName("LI");


    function scales_onclick(f) {
        for (index = 0; index < children.length; index++) {
            children[index].onclick = f
        }
    }

    <% scale_slider_function ||= false
   if scale_slider_function  %>
      scales_onclick(function() {
        <%= scale_slider_function %>
        return false;
      });
<% end%>
</script>