<div class="show_basic">
  <% if @preview %>
    <h3>Preview for: <%= @help_document.title -%></h3>
    <div style="border-bottom: 1px dotted #999;padding-bottom: 1em;">
      <%= @help_document.body_html %>
    </div>
  <% end %>
  <% form_for @help_document, :url => {:action => action } do |f| %>
  
    <%= f.error_messages %><br/>
    
    <p>      
      <%= f.label :identifier %><br/>
      The identifier can only be specified on creation.<br/>
      <%= f.text_field :identifier, :disabled => (action == :update ? 'disabled' : nil) %><br/>
    </p>
      
    <p> 
      <%= f.label :title %><br/>
      <%= f.text_field :title %><br/>
    </p>  
    
    <p> 
      <%= f.label :body %><br/>
      <%= f.text_area :body, :size => "80x20" %><br/>
    </p>  
    
    <%= submit_tag "Preview" %>
    <%= submit_tag action.to_s.titleize %>
    
  <% end %>
</div>