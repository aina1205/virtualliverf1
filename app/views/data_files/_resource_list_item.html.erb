<%= list_item_title resource %>

<%= (resource.respond_to?(:relationship_type) && resource.relationship_type) ? (list_item_attribute "Relationship Type", resource.relationship_type.title) : "" -%>

<%= list_item_simple_list resource.asset.creators, "Creator" -%>

<%= list_item_contributor resource -%>

<%= list_item_attribute "Version", resource.version %>

<%= list_item_optional_attribute "Associated project", resource.project.try(:title), resource.project %>

<%= list_item_timestamp resource.asset %>

<%= list_item_description resource.description %>