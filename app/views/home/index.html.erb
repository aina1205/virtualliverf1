<div id="home">

  <% if SiteAnnouncement.headline_announcement -%>
    <p class="box_standout headline_announcement">
      <%= site_annoucements_headline %>
    </p>
  <% end -%>

  <%= render :partial=>"alternative_home" -%>

  <% if logged_in? and try_block{current_user.person.member?} -%>
    <h2 style="float:left; margin:1.5em 1.5em 2em">
    <%= link_to "Recent changes in your project and across #{Seek::Config.project_name}", :controller => 'home', :action => 'recent_changes' -%>
    </h2>
  <% end -%>

</div>



