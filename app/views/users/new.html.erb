<div id="signup" class="yui-b">
<p>Return to <%= link_to "login", login_url %></p>

  
  <%= error_messages_for :user %>
  
  
  <% form_for :user, :url=>users_url do |f| -%>
    <p><label for="login">Login name</label><br/>
    <%= f.text_field :login %></p>
  
    <% fields_for @user.person.profile do |prof| %>
                
      <p><label for="first_name">First name</label><br/>
      <%= prof.text_field :first_name %></p>
  
      <p><label for="last_name">Last name</label><br/>
      <%= prof.text_field :last_name %></p>
  
    <% end %>
          
<!-- 
    <p><label for="email">Email</label><br/>
    <%= f.text_field :email %></p>
  -->
    <p><label for="password">Password</label><br/>
    <%= f.password_field :password %></p>
  
    <p><label for="password_confirmation">Confirm Password</label><br/>
    <%= f.password_field :password_confirmation %></p>
  
    
    <p><%= submit_tag 'Register' %></p>
  <% end -%>
                  
</div>
