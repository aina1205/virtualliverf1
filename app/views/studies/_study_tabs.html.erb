<% study_resource_hash = Asset.classify_and_authorize(@study.sops.collect{|sop| sop.asset  }, true, current_user) -%>
<% study_resource_hash.merge!(Asset.classify_and_authorize(@study.assays.collect{|assay| assay.data_files.collect{|df| df.asset  }}.flatten, true, current_user)) -%>
<% study_resource_hash.merge!(classify_for_tabs(@study.assays)) -%>
<% study_resource_hash.merge!(classify_for_tabs([@study.project])) -%>

<%= render :partial=>"layouts/items_related_to",:locals=>{:item_name=>@study.title,:item_hash=>study_resource_hash} %>
