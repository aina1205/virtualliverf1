<%= list_item_title resource %>

<div class="list_item_left_column">
  <%= list_item_attribute "ID", resource.id %>
  <%= list_item_attribute "Investigation", resource.investigation.title, resource.investigation %>
</div>


<div class="list_item_right_column">
  <%= list_item_attribute "Project", resource.project.title, resource.project %>
  <%= list_item_authorized_attribute "Person responsible", resource.person_responsible %>
</div>

<div class="list_item_whole_width">
  <%= list_item_authorized_list resource.assays, "Assay" %>
  <%= list_item_scale_list resource %>
  <%= list_item_description resource.description %>

  <%= list_item_timestamp resource %>
</div>