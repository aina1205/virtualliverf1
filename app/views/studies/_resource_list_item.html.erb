<% study=resource_list_item %>

<div class="list_items_container">
  <table class="list_item">
    <tr>
      <td style="width: 100px;">
        <%= favouritable_icon(study, 60) -%>
      </td>
      <td class="item_details">
        <p class="name">

          <span style="float: right; font-size: 77%;">
            <% if mine? study -%>
              <%= icon "edit", edit_study_path(study), nil, nil, "Edit" -%>
            <% end -%>
          </span>
          <%= link_to h(study.title),study_path(study) %>
        </p>

        <div class="box_standout">
          <%= text_or_not_specified(study.description, :description => true,:auto_link=>true,:length=>300) %>
        </div>

        <p class="project">
          <label>Project:</label>
          <%= projects_link_list [study.project] %>
        </p>
        <p class="investigation">
          <label>Investigation: </label>
          <%= investigation_link study.investigation %>
        </p>
        
        <div>
          <p class="person">
            <label>Person responsible:</label>
            <% if study.person_responsible -%>
              <%= link_to h(study.person_responsible.name),study.person_responsible %>
            <% else -%>
              <span class="none_text">Not specified</span>
            <% end -%>
          </p>
        </div>

        <div class="assays">
          <div style="margin-top: 0.3em;">
            <p style="margin-left: 1em;">
              <%= render :partial=>"studies/simple_assay_list",:locals=>{:assays=>study.assays} %>
            </p>
          </div>
        </div>

      </td>

    </tr>
  </table>
</div>