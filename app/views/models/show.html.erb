
<%= javascript_include_tag "resource" ,"zoom/lightbox"-%>
<%= stylesheet_link_tag "lightbox" %>

<ul class="sectionIcons">
  <%= asset_buttons @model, @display_model.version -%>

  <% if Seek::Config.jws_enabled && @display_model.is_jws_supported? -%>
      <% jws_supported_content_blob = @display_model.is_dat? || @display_model.is_sbml? %>
      <% if !jws_supported_content_blob.filesize.nil? && jws_supported_content_blob.filesize < 5*1024*1024 %>
          <% if @model.can_edit? -%>
              <li>
                <%= image_tag_for_key('jws_builder', builder_model_path(@model, :version => @display_model.version), nil, nil, "JWS One Stop") -%>
              </li>
          <% end -%>
          <% if @model.can_download? -%>
              <li>
                <%= image_tag_for_key('execute', simulate_model_path(@model, :version => @display_model.version), nil, {:method => :post}, "Simulate Model on JWS") -%>
              </li>
          <% end -%>
      <% end -%>
  <% end -%>
  <% if cytoscapeweb_supported?(@display_model) %>
           <% if @model.can_download? -%>
               <li>
                 <%= image_tag_for_key('cytoscape_web', visualise_model_path(@model, :version => @display_model.version), nil, {:target => "_blank"}, "Visualise Model with Cytoscape Web") -%>
               </li>
           <% end -%>
   <% end %>
</ul>

  <% if Seek::Config.sycamore_enabled && excutable_content_blob=@display_model.is_sbml? %>
      <% if @model.can_download? && !excutable_content_blob.filesize.nil? && excutable_content_blob.filesize < 5*1024*1024 -%>
        <ul class="sectionIcons">
          <li>
            <%= link_to image('execute') + "Simulate Model on Sycamore", submit_to_sycamore_model_path(@model, :version => @display_model.version), :target => '_blank' -%>
          </li>
        </ul>
    <% end -%>
<% end %>


<%= render :partial=>"assets/upload_new_version_form", :locals=>{:resource=>@model} -%>
<%= render :partial => "layouts/item_title",:locals=>{:item=>@model} %>
<%= render :partial => "layouts/usage_info", :locals => { :resource => @model } -%>

<div class="show_basic">
    <div class="main_content_left_box_narrower">
        <%= render :partial=>"assets/resource_version_details", :locals=>{:displayed_resource=>@display_model, :resource=>@model} -%>
        <div class="box_about_actor">
            <p>
                <b>Title:</b>
                <span class="title"><%=h @display_model.title -%></span>
            </p>
            <p>
              <% files = @display_model.content_blobs %>
                <b>All Files</b> (<span style="font-style: italic;"><%= files.count %> in total</span>):<br/>
              <% files.each do |content_blob|%>
               <%= h(content_blob.original_filename) -%> (<%=h mime_nice_name(content_blob.content_type) -%>)
               <br/>
              <% end %>
            </p>
            <p>
                <b>Organism:</b>
                <% if @display_model.organism -%>
                <%= organism_link_to @display_model.organism -%>
                <% else -%>
                <span class="none_text">Not specified</span>
                <% end -%>
            </p>
            <p>
                <b>Model type:</b>
                <%= model_type_text @display_model.model_type %>
            </p>
            <p>
                <b>Model format:</b>
                <%= model_format_text @display_model.model_format %>
            </p>
            <p>
                <b>Execution or visualisation environment:</b>
                <%= model_environment_text @display_model %>
            </p>
          <p>
          <b>Model visualization</b>(<span style="font-style:italic;">click it to zoom</span>)<br/>
          <!--  Rescale the image according to the proportion.
               Max.width is the width of its container(div#main_content_left_box_narrower?)-->
          <div id="thumbnail" >
            <% if  @display_model.model_image
             image_width = @display_model.model_image.image_width.nil??  "100px" : @display_model.model_image.image_width
            %>
            <a href='<%= url_for(:controller=>"models",:action=>"send_image",:id=>@model,:version=>@display_model.version) %>' rel="lightbox">
               <img src="<%= url_for(:controller=>"models",:action=>"send_image",:id=>@model,:version=>@display_model.version) %>" width="<%= image_width %>"  style="max-width: 100%;"/>
            </a>
            <% else %>
            <span class="none_text">None</span>
            <% end %>
           </div>
         </p>
            <br/>
            <p>
                <b>Description:</b>
                <% unless @display_model.description.blank? -%>
                <div class="box_standout" id="description">
                    <%= simple_format(auto_link(white_list(@display_model.description),:all,:rel=>'nofollow')) -%>
                </div>
                <% else -%>
                <p class="none_text">
                    No description.
                </p>
                <% end -%>
            </p>

            <p>
                <%= embedded_isa_svg(@model, true, @model) -%>
            </p>

        </div>

    </div>

    <%= render :partial=>"assets/resource_main_content_right",:locals => { :resource => @model } %>

    <div style="clear:both;padding-top:1em;">
        <%= render :partial=>"layouts/items_related_to",:object => @model %>
    </div>
</div>


