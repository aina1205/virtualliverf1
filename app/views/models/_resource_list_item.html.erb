<%= list_item_title resource %>

<div class="list_item_left_column">

<%= list_item_authorized_list resource.creators, "Creator" %>

<%= list_item_contributor resource -%>

<%= list_item_optional_attribute "Model type", resource.model_type.try(:title) %>

<%= list_item_optional_attribute "Model format", resource.model_format.try(:title) %>

</div>

<div class="list_item_right_column">
<%= list_item_attribute "Version", resource.version %>

<%= list_item_optional_attribute "Associated project", resource.project.try(:title), resource.project %>
  
<%= list_item_optional_attribute "Organism", resource.organism.try(:title), resource.organism %>

<%= list_item_optional_attribute "Environment", resource.recommended_environment.try(:title) %>
</div>

<div class="list_item_whole_width">
<%= list_item_scale_list resource %>
<%= list_item_tag_list resource %>
<%= list_item_description resource.description %>
<%= list_item_timestamp resource %>
</div>