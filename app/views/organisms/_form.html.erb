
<div id="edit_organism">
    <% form_for(@organism) do |f| %>
    <ul>
        <li>
            <span>
                Display name
            </span><br/>
            <%= f.text_field :title %>
        </li>
        <li>
            <span>
                Ontology ID
            </span><br/>
            <%= f.text_field :ontology_id %>
        </li>
        <li>
            <span>
                Ontology version ID
            </span><br/>
            <%= f.text_field :ontology_version_id %>
        </li>
        <li>
            <span>
                Concept URI
            </span><br/>
            <%= f.text_field :concept_uri %>
        </li>
    </ul>
    <%= f.submit @organism.id ? "Update" : "Create" -%>
    <% end %>
</div>
<br/>
<h3>Search</h3>
<div id="search_results">
    <%= render :partial=>"search_results",:object=>[],:locals=>{:search_term=>@organism.title,:pagenum=>1} %>
</div>

<script type="text/javascript">
      function add_concept(label,ont_id,ont_version_id,conc_id) {
        $('organism_title').value=label;
        $('organism_ontology_id').value=ont_id;
        $('organism_ontology_version_id').value=ont_version_id;
        $('organism_concept_uri').value=conc_id;
		Effect.Appear("edit_ontology");    	
      }
</script>
