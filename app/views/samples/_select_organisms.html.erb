<%= javascript_include_tag 'calendar_date_select/calendar_date_select' %>
<%= stylesheet_link_tag 'calendar_date_select/default' %>

<%
  select_truncate_length=120
  all_organisms = Organism.find(:all,:order=>:title)
  culture_growth_options=options_for_select(CultureGrowthType.find(:all,:order=>:title).collect{|cg| [cg.title,cg.id]}.insert(0,"Not specified"),@sample.specimen.try(:culture_growth_type_id))
-%>
<div class="fold">

  <div class="foldTitle">
    <%= help_icon("Here you can associate the specimen with specific organism and strain.") -%>
    Organism-Strain-Specimen <span class="required">*</span>
  </div>

  <div id="organisms_fold_content" class="foldContent" style="display: block;">
    <div class="yui-u first">

      <div class="association_step">
        <b>Step 1</b> - Choose an organism<br/><br/>
        <%= select_tag "specimen[organism_id]",
        options_for_select([["Select Organism ...", 0]]|all_organisms.collect{|o| [truncate(h(o.title), :length=>select_truncate_length), o.id]},@sample.specimen.try(:organism_id)),
         {:style=>"width:90%", :onchange=>"check_show_add_organism();return(false);"

          } -%>
      </div>
      <div id="extra_organism_details" style="display:none;">
        <div class="association_step">
          <b>Step 2</b> - Specify a strain<br/>  <br/>
          <% strain = @sample.specimen.try(:strain) %>
          <% if (action == :edit) && (strain and strain.parent_id)%>
              <p class='none_text'>This strain is selected: </p>
              <%= link_to_remote(h(strain.title), {:url =>{:controller => 'strains', :action => 'show_existing_strain', :id => "#{strain.id}"},
                  :with => "'status='+'edit' + '&organism_id='+ $F('specimen_organism_id')", :before => remote_function(:url=>{:action=>"show_existing_strains", :controller=>"strains"},
                                   :with=>"'strain_id='+'#{strain.id}' + '&organism_id='+ $F('specimen_organism_id')") + ";$('create_strain_2').checked = true;"}) %>
              <br/><br/>
          <% elsif (action == :edit) && (strain and !strain.parent_id and strain.title != 'default')%>
              <p class='none_text'>This strain is selected: </p>
              <%= link_to_remote(h(strain.title), {:url =>{:controller => 'strains', :action => 'new_strain', :id => "#{strain.id}"},
                                                   :with => "'status='+'edit' + '&organism_id='+ $F('specimen_organism_id')", :before => "$('create_strain_1').checked = true"}) %>
              <br/><br/>
          <% elsif (action == :edit) && ((strain and strain.title == 'default') || !strain) %>
              <p class='none_text'>No strain is selected </p>
          <% end %>

                <div id="create_based_on_existing_strain">
                <%= radio_button_tag(:create_strain, 2 , false,
                                     :onchange=>remote_function(:url=>{:action=>"show_existing_strains", :controller=>"strains"},
                                   :with=>"'strain_id='+'#{strain.try:id}' + '&organism_id='+ $F('specimen_organism_id')",
                                                                :before=>"show_ajax_loader('strain_form')")+";return(false);") %>
              <label>Select/create from existing strain</label>

              </div>
              <br/>
              <div id='create_new_strain'>
                <%= radio_button_tag(:create_strain, 1, false,
                                     :onchange=>remote_function(:url=>{:action=>"new_strain", :controller=>"strains"},
                                             :with=>"'organism_id='+ $F('specimen_organism_id')",
                                                                :before=>"show_ajax_loader('strain_form')") + ";return(false);") %>
              <label>Create without basing on existing strain</label>

              </div>
              <br/>
              <div id='no_strain'>
                <%= radio_button_tag(:create_strain, 0, false,
                    :onchange=>"fadeCreateStrain();return(false);") %>
              <label>No strain</label>
                <div id='existing_strains'></div>
                         <div id='strain_form'></div>

          </div>
          </div>
        <div class="association_step">
          <b>Step 3</b> - Specify specimen<br/><br/>
          <%= select_tag "specimen[culture_growth_type_id]",culture_growth_options ,{:onchange=>"check_show_which_fields();return(false);"}-%>
          <br/>

          <div id="fields_for_batch_and_chemostat" style="display:none;">
           <table id="table3" border="1" cellpadding="10" >
               <tr>
                 <td><%= label_tag :ploidy -%></td>
                 <td><%= text_field_tag "specimen[ploidy]"  %> </td>
               </tr>
               <tr>
                 <td><%= label_tag :sex -%></td>
                 <td style="text-align:left;"><%= select_tag :sex,options_for_select({"female"=>true,"male"=>false},@sample.specimen.try(:sex)),:include_blank=>"Not Specified"%> </td>
               </tr>
         </table>
         </div>

          <br/>

        </div>
    </div>
  </div>
</div>
</div>

<script type="text/javascript">
 var organism = new Array();
    function check_show_add_organism() {

      selected_id = $F('specimen_organism_id') ;
      if (selected_id == '0') {
        Effect.Fade('extra_organism_details');
      }
      else {
        var radio_buttons = document.getElementsByName('create_strain');
        for (var i=0; i< radio_buttons.length;i++){
           radio_buttons[i].checked=false
        }
        Effect.Fade('existing_strains', { duration: 0.25});
        Effect.Fade('strain_form', { duration: 0.25});
        Effect.Appear('extra_organism_details');
      }
    }


