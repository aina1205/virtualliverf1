<div id="who_am_i" class="myexperiment_gadget">
  <b class="xtop"><b class="xb1"></b><b class="xb2"></b><b class="xb3"></b><b class="xb4"></b></b>

  <div class="header">
    <%= h @current_user.person.name %>
  </div>
  
  <div class="contents">
    
    <div id="avatar">
      <%= avatar(current_user.person, 60) -%>
    </div>
    
    <p><%= link_to "Edit my profile", url_for(:controller=>"people", :action=>"edit", :id=>@current_user.person) %></p>
    <p><%= link_to "Logout", logout_url %></p>
  </div>
  
  <b class="xbottom"><b class="xb5"></b><b class="xb6"></b><b class="xb7"></b><b class="xb1"></b></b>
</div>