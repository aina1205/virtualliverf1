<div class="myexperiment_gadget" id="metrics">
  <b class="xtop"><b class="xb1"></b><b class="xb2"></b><b class="xb3"></b><b class="xb4"></b></b>
  
  <div class="header">
    Metrics
  </div>
  
  <div class="contents">
    Users: <%= User.count %><br/>
    People: <%= Person.count %><br/>
    Projects: <%= Project.count %><br/>
    Institutions: <%= Institution.count %><br/>
    WorkGroups: <%= WorkGroup.count %><br/>
    Expertise: <%= Expertise.count %><br/>
  </div>
  
  <b class="xbottom"><b class="xb5"></b><b class="xb6"></b><b class="xb7"></b><b class="xb1"></b></b>
</div>
<%= drop_receiving_element("metrics", 
  :accept=>"favourite",
  :url=>{:controller=>'favourites', :action=>'delete'},
  :before => "Element.show('fav_ajax-loader')",
  :complete => "Element.hide('fav_ajax-loader');") %>
