


<% if current_user.try(:person).try(:member?) -%>
    <div class="sysmo_gadget">

      <div class="header">
        Go to my project
      </div>
      <div class="contents">
        <div style="text-align: center">

            <input type=button id="my_project_button" class="gadget_button" value="My Project" onclick="javascript:myProjectClicked();"/>

            <ul id="my_project_menu" class='dynamic_menu' style="display:none;">

                <% current_user.person.projects.each do |p| %>
                    <li class='dynamic_menu_li' onclick="javascript:location.href='<%= project_path(p) -%>';"><%= p.name %></li>
                <% end %>
            </ul>

        </div>
      </div>
    </div>

    <script type="text/javascript">
        function myProjectClicked() {
        <% if current_user.person.projects.size==1 -%>
            location.href='<%= project_path(current_user.person.projects.first) -%>';
        <% else -%>
            toggleDynamicMenu('my_project_menu');
        <% end -%>
        }
    </script>

<% end -%>

