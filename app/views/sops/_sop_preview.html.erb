<% unless sop.nil? -%>
  <div title='<%= tooltip_title_attrib(h(sop.description),1000) %>'>
    <p class="title">
      <%= h sop.title %>
    </p>

    <p class="project">
      Project: <%= h sop.asset.project.name %>
    </p>
    <p class="author">
      Author: <%= h sop.contributor.person.name %>
    </p>
    <p class="description">
      <%= truncate(h(sop.description),:length=>400) %>
    </p>
  </div>
<% end -%>