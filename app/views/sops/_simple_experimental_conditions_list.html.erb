<% if @sop.can_view? -%>

  <% if @sop.can_edit? -%>
    <ul class="sectionIcons">
      <li><%= image_tag_for_key('edit', sop_experimental_conditions_path(@sop), nil, nil, 'Edit experimental conditions (latest version)') -%></li>
    </ul>
  <% end -%>

  <br/>

  <% unless @display_sop.experimental_conditions.empty? -%>
    <ul class="conditions_and_factors">
      <%= render :partial=>"experimental_conditions/condition_row_headings" %>
      <%= render :partial=>"experimental_conditions/condition_row",:collection=>@display_sop.experimental_conditions %>
    </ul>
  <% else -%>
    <span class="none_text">There are no experimental conditions for this Sop.</span>
  <% end -%>

  <div style="clear:both;">&nbsp;</div>

<% end -%>