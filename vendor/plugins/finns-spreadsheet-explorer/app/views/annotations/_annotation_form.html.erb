<div class="annotation_form" id="annotation_form" style="display:none">
    <% form_remote_tag(:url=>{:controller=>"spreadsheet_annotations", :action=>"create"},   
                   :update => { :success => "hidden_annotations", :failure => "hidden_annotations"},
                   :loading => "Element.show('spinner');",
                   :complete => "Element.hide('spinner');Element.hide('annotation_form');", :html => {:id => "annotation_form"}) do %>
    
    <%= hidden_field_tag :annotation_id %>                
    <%= hidden_field_tag :annotation_data_file_id, @data_file.id %>    
    <%= hidden_field_tag :annotation_sheet_id, "0" %>
    
    <p>
      Cell Range:<br/>
      <%= text_field_tag :annotation_cell_coverage %>
    </p>
    
    <p>
      Content:<br/>
      <%= text_area_tag :annotation_content %>
    </p>
                       
    <%= submit_tag 'Add Annotation',:id=>"fetch_button" %>
  <% end %>
  <%= image_tag "ajax-loader.gif", :id => 'spinner', :style => 'display:none;' -%>
</div>
