<div class="annotation" id="annotation_<%=annotation.id-%>">
  <div class="annotation_header">
    <%= avatar(annotation.source.person, 24) -%> <%= link_to(annotation.source.person.name, annotation.source.person)%> - 
    <%= time_ago_in_words(annotation.created_at) %> ago   
  </div>
  <div class="annotation_body">
    <%= annotation.content %>
  </div>
  <div class="annotation_footer">
    <%= annotation.cell_coverage %>    
  </div>
</div>
